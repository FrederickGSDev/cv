---

<ninja-keys class="print:hidden" placeholder="Buscar comando"></ninja-keys>

<footer class="bottom-0 fixed print:hidden bg-white border-t w-full text-center">
  Pulsa <kbd class="bg-neutral-200 px-1 rounded">Cmd</kbd> + <kbd class="bg-neutral-200 px-1 rounded">K</kbd> para abrir la paleta de comandos.
</footer>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  footer {
    view-timeline-name: --revealing;
    view-timeline-axis: block;

    animation: linear 0.3s fadeIn;
    animation-timeline: --revealing;
    animation-range: entry 100% cover 10%;
  }
</style>

<script>
  import 'ninja-keys';

  const ninja = document.querySelector('ninja-keys');

  if (!ninja) {
    throw new Error('Ninja Keys not found');
  }

  ninja.data = [
    {
      id: 'Print',
      title: 'Imprimir',
      hotkey: 'ctrl+P',
      icon: '<svg  xmlns="http://www.w3.org/2000/svg"  width="20"  height="20" style="margin-right: 0.2rem;" viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icon-tabler-printer icons-tabler-outline"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M17 17h2a2 2 0 0 0 2 -2v-4a2 2 0 0 0 -2 -2h-14a2 2 0 0 0 -2 2v4a2 2 0 0 0 2 2h2" /><path d="M17 9v-4a2 2 0 0 0 -2 -2h-6a2 2 0 0 0 -2 2v4" /><path d="M7 13m0 2a2 2 0 0 1 2 -2h6a2 2 0 0 1 2 2v4a2 2 0 0 1 -2 2h-6a2 2 0 0 1 -2 -2z" /></svg>',
      section: 'Acciones',
      handler: () => {
        window.print();
      },
    },
    {
      id: 'GoToGithub',
      title: 'Visitar Github',
      hotkey: 'ctrl+G',
      icon: '<svg  xmlns="http://www.w3.org/2000/svg" width="20"  height="20" style="margin-right: 0.2rem;"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icon-tabler-brand-github icons-tabler-outline"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5" /></svg>',
      section: 'Social',
      handler: () => {
        window.open("https://github.com/FrederickGSDev", "FrederickGSDev", "menubar=yes,location=yes,resizable=yes,scrollbars=yes,status=yes");
      },
    },
    {
      id: 'GoToLinkedIn',
      title: 'Visitar LinkedIn',
      hotkey: 'ctrl+L',
      icon: '<svg  xmlns="http://www.w3.org/2000/svg"  width="20"  height="20" style="margin-right: 0.2rem;" viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icon-tabler-brand-linkedin icons-tabler-outline"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M8 11v5" /><path d="M8 8v.01" /><path d="M12 16v-5" /><path d="M16 16v-3a2 2 0 1 0 -4 0" /><path d="M3 7a4 4 0 0 1 4 -4h10a4 4 0 0 1 4 4v10a4 4 0 0 1 -4 4h-10a4 4 0 0 1 -4 -4z" /></svg>',
      section: 'Social',
      handler: () => {
        window.open("https://www.linkedin.com/in/fredgsdev/", "Frederick Guzman Salas | LinkedIn", "menubar=yes,location=yes,resizable=yes,scrollbars=yes,status=yes");
      },
    }
  ];
</script>
