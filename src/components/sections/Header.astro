---
import MailIcon from "@/icons/MailIcon.astro"
import WorldIcon from "@/icons/WorldIcon.astro"
import PhoneIcon from "@/icons/PhoneIcon.astro"
import GithubIcon from "@/icons/GithubIcon.astro"
import LinkedinIcon from "@/icons/LinkedinIcon.astro"
---

<header class="flex justify-between items-center">
  <div class="flex-1 space-y-1.5">

    <h1 class="font-bold text-2xl" id="resume-name">
      Frederick Guzmán Salas
    </h1>

    <p class="max-w-md font-mono text-neutral-700 print:text-[12px] text-sm text-pretty" aria-labelledby="resume-name" >
      Ingeniero en Desarrollo y Gestión de Software
      especializado en desarrollo web full-stack.
    </p>

    <p class="flex items-center gap-1 max-w-md font-mono text-neutral-800 text-xs text-pretty">
        <WorldIcon size="small"/>
        Petatlán, Guerrero, MX
    </p>

    <div class="print:hidden flex gap-x-1 pt-1 font-mono text-foreground/80 text-sm" role="list" aria-label="Enlaces de contacto">

      <!-- <a href="https://fredgs.dev" aria-label="Sitio web" target="_blank" rel="noopener noreferrer" class="inline-flex justify-center items-center bg-background hover:bg-accent disabled:opacity-50 border border-input rounded-md focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring ring-offset-background focus-visible:ring-offset-2 size-8 font-medium text-sm whitespace-nowrap transition-colors hover:text-accent-foreground disabled:pointer-events-none">
        <WorldIcon size="medium"/>
      </a> -->
      
      <a href="mailto:fredgs.dev@gmail.com" aria-label="Correo electrónico" target="_blank" rel="noopener noreferrer" class="inline-flex justify-center items-center bg-background hover:bg-accent disabled:opacity-50 border border-input rounded-md focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring ring-offset-background focus-visible:ring-offset-2 size-8 font-medium text-sm whitespace-nowrap transition-colors hover:text-accent-foreground disabled:pointer-events-none">
        <MailIcon />
      </a>

      <a href="tel:+527581046172" aria-label="Telefono" target="_blank" rel="noopener noreferrer" class="inline-flex justify-center items-center bg-background hover:bg-accent disabled:opacity-50 border border-input rounded-md focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring ring-offset-background focus-visible:ring-offset-2 size-8 font-medium text-sm whitespace-nowrap transition-colors hover:text-accent-foreground disabled:pointer-events-none" >
        <PhoneIcon />
      </a>
        
      <a href="https://github.com/FrederickGSDev" aria-label="GitHub" target="_blank" rel="noopener noreferrer" class="inline-flex justify-center items-center bg-background hover:bg-accent disabled:opacity-50 border border-input rounded-md focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring ring-offset-background focus-visible:ring-offset-2 size-8 font-medium text-sm whitespace-nowrap transition-colors hover:text-accent-foreground disabled:pointer-events-none">
        <GithubIcon />
      </a>

      <a href="https://www.linkedin.com/" aria-label="LinkedIn" target="_blank" rel="noopener noreferrer" class="inline-flex justify-center items-center bg-background hover:bg-accent disabled:opacity-50 border border-input rounded-md focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring ring-offset-background focus-visible:ring-offset-2 size-8 font-medium text-sm whitespace-nowrap transition-colors hover:text-accent-foreground disabled:pointer-events-none">
        <LinkedinIcon />
      </a>

    </div>
    
    <div class="hidden print:flex gap-x-2 font-mono text-foreground/80 print:text-[12px] text-sm" aria-label="Print información de contacto" >
      <a class="hover:text-foreground/70 underline" href="https://fredgs.dev">
        fredgs.dev
      </a>
      <span aria-hidden="true">&bull;</span>
      <a class="hover:text-foreground/70 underline" href="mailto:fredgs.dev@gmail.com">
        fredgs.dev@gmail.com
      </a>
      <span aria-hidden="true">&bull;</span>
      <a class="hover:text-foreground/70 underline" href="tel:+527581046172">
        +527581046172
      </a>
    </div>

  </div>

  <span class="relative flex rounded-xl size-28 overflow-hidden shrink-0" aria-hidden="true">
    <img
      class="w-full h-full object-cover object-top aspect-square"
      alt="Imagen de perfil de Frederick Guzmán Salas"
      src="/FGS.jpg"
    />
  </span>
</header>
